# Event Booking System - Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

# Google Cloud Configuration
project_id   = "ordinal-throne-463911-h8"
project_name = "event-booking"
region       = "us-central1"
zone         = "us-central1-a"
environment  = "prod"

# VM Configuration
vm_name      = "event-booking-vm"
machine_type = "e2-micro"  # Free tier eligible
vm_image     = "ubuntu-os-cloud/ubuntu-2004-lts"
disk_size    = 20  # GB

# Network Configuration
subnet_cidr = "10.0.1.0/24"

# SSH Configuration
ssh_user             = "ubuntu"
ssh_public_key_path  = "~/.ssh/id_rsa.pub"

# Application Configuration
docker_image = "nkdhd/event-booking-app:latest"
domain_name  = "event-booking.example.com"  # Update with your domain
create_dns_zone = false  # Set to true if you have a domain

# Security Configuration
allowed_ssh_sources = [
  "0.0.0.0/0"  # Allow from anywhere - restrict this in production
]

allowed_http_sources = [
  "0.0.0.0/0"  # Allow from anywhere
]

# Monitoring Configuration
enable_monitoring = true
enable_logging    = true

# Backup Configuration
backup_retention_days = 30

# Resource Labels
labels = {
  project     = "event-booking-system"
  course      = "software-architecture"
  managed_by  = "terraform"
  environment = "production"
  student     = "your-name"
}

# Cost Management
preemptible         = false  # Set to true for cheaper instances (can be terminated)
automatic_restart   = true
on_host_maintenance = "MIGRATE"

# Application Environment Variables
app_environment_vars = {
  NODE_ENV                = "production"
  SKIP_ENV_VALIDATION     = "1"
  NEXT_TELEMETRY_DISABLED = "1"
  PORT                    = "3000"
  HOSTNAME                = "0.0.0.0"
}

# Database Configuration
mysql_database_name = "event_booking"
mysql_user         = "app_user"

# Monitoring Ports
monitoring_ports = {
  prometheus = 9090
  grafana    = 3001
  jenkins    = 8080
  app        = 3000
}

# SSL Configuration
enable_ssl = true
ssl_email  = "your-email@example.com"  # Update with your email
